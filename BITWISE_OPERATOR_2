#include<iostream>
using namespace std;

int odd_OR_even_using_bitwise_op(int n){
		return (n&1);                        /////////////EXTRACTING LAST BIT OF A NUMBER/////////////////////
}


int get_ith_bit(int n,int i){
	return (n &(1<<i)) ? 1:0;              /////////////geting ith bit of a number//////////////////////
}

int set_it_bit(int n,int i){
	int mask = (1<<i);
	int ans = (n | mask);
	cout<<"The ith bit of n is now "<<get_ith_bit(ans,i)<<"\n";
	return ans;	
}


int main(int argc, char const *argv[])
{
	int n, i;cin>>n>>i;
	cout<<odd_OR_even_using_bitwise_op(n)<<"\n";

	cout<<"--------------------------"<<"\n";

	cout<<get_ith_bit(n,i)<<"\n";

	cout<<"--------------------------"<<"\n";

	cout<<"The ans after setting the "<<i<<"th bit of "<<n<<" is "<<set_it_bit(n,i)<<"\n";

	cout<<"--------------------------"<<"\n";
	return 0;
}
